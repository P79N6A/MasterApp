<?xml version="1.0" encoding="utf-8"?>
<!--已预约item-->
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:targetApi="lollipop"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_returned_sheet"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false"
    app:cardElevation="10dp"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<ImageView
    android:id="@+id/img_returned_sheet"
    android:layout_width="15dp"
    android:layout_height="15dp"
    android:src="@mipmap/icon_pending_appointment"
    android:layout_margin="5dp"
    />
        <TextView
            android:id="@+id/tv_returned_sheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已返件"
            android:textSize="10sp"
            android:layout_toRightOf="@+id/img_returned_sheet"
            android:layout_centerVertical="true"
            android:textColor="@color/color_custom_04"
            />

    <TextView
        android:id="@+id/tv_returned_sheet_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="工单号:12124124124"
        android:layout_alignParentRight="true"
        android:textSize="10sp"
        android:textColor="@color/color_black"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_custom_03"
        />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_returned_sheet_status_install"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/color_custom_01"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="10sp"
            android:text="安装"
            android:textColor="@color/color_white" />

        <TextView
            android:id="@+id/tv_returned_sheet_status_repair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/color_custom_04"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="维修"
            android:textSize="10sp"
            android:textColor="@color/color_white"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/tv_reason_returned_sheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="热水器不通电"
            android:textColor="@color/color_custom_01"
           android:layout_toRightOf="@+id/tv_returned_sheet_status_install"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/tv_number_returned_sheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:text="数量:2台"
            android:textSize="10sp"
            android:layout_toRightOf="@+id/tv_reason_returned_sheet"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/tv_address_returned_sheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="宁波市江北区长阳路人才公寓5栋1701室"
            android:textSize="8sp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/tv_returned_sheet_status_install"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/tv_returned_sheet_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快递信息:快递已经被签收,请及时完成工单"
            android:textSize="8sp"
            android:textColor="@color/color_black"
            android:layout_below="@+id/tv_address_returned_sheet"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"

            />
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="电话"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_custom_03"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/tv_returned_sheet_apply_for_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="申请服务"
            android:layout_centerInParent="true"
            android:textColor="@color/color_white"
            android:background="@color/color_custom_01"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="10sp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"

            />

        <TextView
            android:id="@+id/tv_returned_sheet_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="完成工单"
            android:layout_centerInParent="true"
            android:textColor="@color/color_white"
            android:background="@color/color_custom_01"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="10sp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"

            />
    </LinearLayout>
</LinearLayout>

</android.support.v7.widget.CardView>
