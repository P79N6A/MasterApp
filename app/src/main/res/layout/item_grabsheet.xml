<?xml version="1.0" encoding="utf-8"?>

<!--已接订单-->
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:targetApi="lollipop"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_grabsheet"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false"
    app:cardElevation="5dp"
    >

        <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_grabsheet_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="10sp"
                android:text="40分钟前" />

            <TextView
                android:id="@+id/tv_grabsheet_status_install"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_toRightOf="@+id/tv_grabsheet_time"
                android:background="@color/color_custom_01"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textSize="12sp"
                android:text="安装"
                android:textColor="@color/color_white" />

            <TextView
                android:id="@+id/tv_grabsheet_status_repair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_toRightOf="@+id/tv_grabsheet_time"
                android:background="@color/color_custom_04"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="维修"
                android:textSize="12sp"
                android:textColor="@color/color_white"
                android:visibility="invisible"
                />

        </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_custom_03" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:src="@mipmap/icon_loaction"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
               />
     <TextView
         android:id="@+id/tv_loaction"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="12sp"
         android:text="距离13.74Km"
         android:layout_marginTop="10dp"
         />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数量:2台"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:textSize="12sp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="热水器不通电"
            android:textColor="@color/color_custom_01"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            />
      <TextView
    android:id="@+id/tv_address"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="宁波市江北区长阳路人才公寓5栋1701室asfasfattttttt"
    android:textSize="12sp"
    android:layout_marginLeft="20dp"
    />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:id="@+id/btn_grabsheet"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_circle"
            android:text="抢单"
            android:textSize="20sp"
            android:textColor="@color/color_white"
            android:layout_marginRight="5dp"
            />

    </LinearLayout>



</LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_custom_03" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_share"
                android:layout_margin="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/icon_share"
                />

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/img_share"
                android:text="推荐师傅入驻接此单最低奖励20元"
                android:textSize="12sp" />
        </RelativeLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>
