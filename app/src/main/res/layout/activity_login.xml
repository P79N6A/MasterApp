<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_custom_05"
    >
    <RelativeLayout
        android:background="@color/color_custom_05"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
<ImageView
    android:id="@+id/img_login_break"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:src="@mipmap/icon_break"
    android:layout_centerVertical="true"
    android:layout_marginLeft="5dp"
    />


    </RelativeLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/color_custom_06"
    />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_centerInParent="true"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher_round"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"/>
</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/ll_login"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
           <ImageView
               android:id="@+id/img_login_username"
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:layout_margin="10dp"
               android:src="@mipmap/ic_launcher_round"
               />
            <EditText
                android:id="@+id/et_login_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入用户账号"
                android:textColor="@color/color_black"
                android:textColorHint="@color/color_custom_06"
                android:layout_toRightOf="@+id/img_login_username"
                android:layout_centerVertical="true"
                android:background="@null"
                />
            <ImageView
                android:id="@+id/img_login_username_cancel"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_launcher_round"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_custom_06"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_login_password"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:src="@mipmap/ic_launcher_round"
                />
            <EditText
                android:id="@+id/et_login_password"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入密码"
                android:textColor="@color/color_black"
                android:textColorHint="@color/color_custom_06"
                android:layout_toRightOf="@+id/img_login_password"
                android:layout_centerVertical="true"
                android:background="@null"
                />
            <ImageView
                android:id="@+id/img_login_password_hide"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_launcher_round"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
           android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="登录"
            android:textColor="@color/color_white"
            android:background="@drawable/btn_login"

            />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="立即注册"
    android:textColor="@color/color_custom_06"
    android:layout_below="@+id/btn_login"
    />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:textColor="@color/color_custom_06"
            android:layout_below="@+id/btn_login"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="20dp"
        >
<View
    android:layout_width="0dp"
    android:layout_height="1dp"
    android:layout_weight="2"
    android:background="@color/color_custom_06"

    />
  <TextView
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:textColor="@color/color_custom_06"
      android:text="快速登录"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="2"
            android:background="@color/color_custom_06"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >
      <ImageView
    android:layout_width="0dp"
    android:layout_weight="1"
          android:src="@mipmap/ic_launcher_round"
    android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher_round"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher_round"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>
