<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:targetApi="lollipop"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:id="@+id/cv_home_user"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_home_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/ic_launcher_round"/>
        <TextView
            android:id="@+id/tv_home_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王师傅"
            android:textSize="20sp"
            android:textColor="@color/color_black"
            android:layout_toRightOf="@+id/img_home_head"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/tv_certification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已实名认证"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_custom_01"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            />
        <ImageView
            android:id="@+id/img_certification"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_launcher_round"
            android:layout_toLeftOf="@+id/tv_certification"
            android:layout_marginTop="20dp"
            />
<TextView
    android:id="@+id/tv_home_authentication"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="小家电维修师"
    android:layout_below="@+id/tv_home_username"
    android:layout_toRightOf="@+id/img_home_head"
    android:layout_marginLeft="10dp"
    />
    <ImageView
        android:id="@+id/img_home_authentication"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/ic_launcher_round"
        android:layout_toRightOf="@+id/tv_home_authentication"
        android:layout_below="@id/tv_home_username"
        />
        <TextView
            android:id="@+id/tv_home_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="从业13年小家电维修行业|影响力800"
            android:layout_below="@+id/tv_home_authentication"
            android:layout_toRightOf="@+id/img_home_head"
            android:layout_marginLeft="10dp"
            />

        <ImageView
            android:id="@+id/img_home_location"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_launcher_round"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/tv_home_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:text="宁波市.江北区"
            android:layout_toRightOf="@+id/img_home_location"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            />


        <TextView
            android:id="@+id/tv_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="接单状态"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            />
        <ImageView
            android:id="@+id/img_order_status"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_launcher_round"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@+id/tv_order_status"
            android:layout_marginRight="5dp"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>
