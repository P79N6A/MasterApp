<?xml version="1.0" encoding="utf-8"?>
<!--已预约item-->
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:targetApi="lollipop"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_have_appointment"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false"
    app:cardElevation="5dp"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<ImageView
    android:id="@+id/img_have_appointment"
    android:layout_width="15dp"
    android:layout_height="15dp"
    android:src="@mipmap/icon_pending_appointment"
    android:layout_margin="5dp"
    />
        <TextView
            android:id="@+id/tv_have_appointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已预约"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/img_have_appointment"
            android:layout_centerVertical="true"
            android:textColor="@color/color_custom_04"
            />

        <TextView
            android:id="@+id/tv_have_appointment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:textSize="10sp"
            android:text="2018-12-21 13:20:00"
            android:layout_toRightOf="@+id/tv_have_appointment"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            />
    <TextView
        android:id="@+id/tv_have_appointment_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="工单号:12124124124"
        android:layout_alignParentRight="true"
        android:textSize="12sp"
        android:textColor="@color/color_black"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_custom_03"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<ImageView
    android:id="@+id/img_have_appointment_loaction"
    android:layout_width="15dp"
    android:layout_height="15dp"
    android:src="@mipmap/icon_loaction"
    android:layout_margin="5dp"
    />
        <TextView
            android:id="@+id/tv_loaction_have_appointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:textSize="12sp"
            android:text="距离 43.12KM"
            android:layout_toRightOf="@+id/img_have_appointment_loaction"
            android:layout_centerVertical="true"

            />
<TextView
    android:id="@+id/tv_number_have_appointment"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/color_black"
    android:text="数量:2台"
    android:textSize="12sp"
    android:layout_toRightOf="@+id/tv_loaction_have_appointment"
    android:layout_centerVertical="true"
    android:layout_marginLeft="80dp"
    />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_have_appointment_status_install"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/color_custom_01"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="12sp"
            android:text="安装"
            android:textColor="@color/color_white" />

        <TextView
            android:id="@+id/tv_have_appointment_status_repair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/color_custom_04"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="维修"
            android:textSize="12sp"
            android:textColor="@color/color_white"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/tv_reason_pending_appointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="热水器不通电"
            android:textColor="@color/color_custom_01"
           android:layout_toRightOf="@+id/tv_have_appointment_status_repair"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            />
        <TextView
            android:id="@+id/tv_address_have_appointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="宁波市江北区长阳路人才公寓5栋1701室"
            android:textSize="12sp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/tv_have_appointment_status_repair"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/tv_have_appointment_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提示:如到达用户家里请点击开始服务"
            android:textSize="10sp"
            android:textColor="@color/color_black"
            android:layout_below="@+id/tv_address_have_appointment"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"

            />
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="电话"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_custom_03"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_have_appointment_start_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="开始服务"

            android:layout_centerInParent="true"
            android:textColor="@color/color_white"
            android:background="@color/color_custom_01"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="15sp"
                 />


    </RelativeLayout>
</LinearLayout>

</android.support.v7.widget.CardView>
