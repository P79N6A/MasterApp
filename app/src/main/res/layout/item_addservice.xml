<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img_add_service_unselect"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_ac_unselect"
        android:layout_marginLeft="20dp"
        />

    <ImageView
        android:visibility="invisible"
        android:id="@+id/img_add_service_select"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_ac_select"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/tv_add_service_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/img_add_service_select"
        android:text="加氮"
        android:textColor="#6A6A6A"
        android:textSize="18sp" />






    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_custom_03"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
