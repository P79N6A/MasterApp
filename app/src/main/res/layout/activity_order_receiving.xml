<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".activity.Order_Receiving_Activity">

  <include layout="@layout/actionbar_receiving_layout"/>

<android.support.design.widget.TabLayout
    android:id="@+id/tab_receiving_layout"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/color_custom_02"
    app:tabIndicatorColor="@color/color_custom_01"
    app:tabSelectedTextColor="@color/color_custom_01"
    app:tabTextColor="@color/color_black"
    app:tabIndicatorHeight="2dp"


    />
  <android.support.v4.view.ViewPager
      android:id="@+id/receiving_viewpager"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:background="@color/color_custom_02"
      >

  </android.support.v4.view.ViewPager>
</LinearLayout>