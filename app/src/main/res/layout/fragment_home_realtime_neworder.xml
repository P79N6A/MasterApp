<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="97dp"
    android:background="@color/color_white"
    android:layout_alignParentBottom="true"

    >
    <!--实时新订单-->



        <ImageView
            android:id="@+id/img_new_order"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@mipmap/icon_home_sheet"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="12dp"/>
        <TextView

            android:id="@+id/tv_new_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/img_new_order"
            android:text="实时新订单"
            android:layout_marginBottom="12dp"
            android:textSize="17sp"/>

    <TextView
        android:id="@+id/tv_home_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="点击刷新工单"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="30dp"
        android:textColor="#8A8A8A"
        />

    <ImageView
    android:layout_width="18dp"
    android:layout_height="14dp"
    android:src="@mipmap/icon_home_refresh"
        android:layout_toLeftOf="@+id/tv_home_refresh"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="2dp"


    />



</RelativeLayout>
