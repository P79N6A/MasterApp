<?xml version="1.0" encoding="utf-8"?>
<!--待预约item--><!--指派订单item-->
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:targetApi="lollipop"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_grabsheet"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false"
    app:cardElevation="10dp"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<ImageView
    android:id="@+id/img_pending_appointment"
    android:layout_width="15dp"
    android:layout_height="15dp"
    android:src="@mipmap/icon_pending_appointment"
    android:layout_margin="5dp"
    />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待预约"
            android:textSize="10sp"
            android:layout_toRightOf="@+id/img_pending_appointment"
            android:layout_centerVertical="true"
            android:textColor="@color/color_custom_01"
            />
    <TextView
        android:id="@+id/tv_pending_appointment_job_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="工单号:12124124124"
        android:layout_alignParentRight="true"
        android:textSize="10sp"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_custom_03"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<ImageView
    android:id="@+id/img_loaction"
    android:layout_width="10dp"
    android:layout_height="10dp"
    android:src="@mipmap/icon_loaction"
    android:layout_margin="5dp"
    />
        <TextView
            android:id="@+id/tv_loaction_appointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="距离 43.12KM"
            android:layout_toRightOf="@+id/img_loaction"
            android:layout_centerVertical="true"

            />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="数量:2台"
    android:textSize="10sp"
    android:layout_toRightOf="@+id/tv_loaction_appointment"
    android:layout_centerVertical="true"
    android:layout_marginLeft="80dp"
    />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_pending_appointment_status_install"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/color_custom_01"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="10sp"
            android:text="安装"
            android:textColor="@color/color_white" />

        <TextView
            android:id="@+id/tv_pending_appointment_status_repair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/color_custom_04"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="维修"
            android:textSize="10sp"
            android:textColor="@color/color_white"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/tv_reason_pending_appointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="热水器不通电"
            android:textColor="@color/color_custom_01"
           android:layout_toRightOf="@+id/tv_pending_appointment_status_repair"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/tv_address_pending_appointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="宁波市江北区长阳路人才公寓5栋1701室"
            android:textSize="8sp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/tv_pending_appointment_status_repair"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/tv_pending_appointment_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工单将于59分39秒后取消,请及时联系客户"
            android:textSize="8sp"
            android:textColor="@color/color_black"
            android:layout_below="@+id/tv_address_pending_appointment"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"

            />
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="电话"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_custom_03"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_pending_appointment_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="预约成功"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_custom_01"
                 />

        <TextView
            android:id="@+id/tv_pending_appointment_failure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未预约成功"
            android:layout_toLeftOf="@+id/tv_pending_appointment_success"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
</LinearLayout>

</android.support.v7.widget.CardView>
